        <TextView
            android:id="@+id/statusMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_from_product_image"
            android:layout_marginTop="8dp"

            android:ellipsize="end"
            android:maxLines="2"
