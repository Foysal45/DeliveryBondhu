<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/solaiman_lipi</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/bg_launcher</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>
    
    <style name="ActionButtonPositive" parent="Widget.MaterialComponents.Button">

        <item name="colorPrimary">@color/button_action_accept</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="icon">@drawable/ic_done</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">20dp</item>

    </style>

    <style name="ActionButtonNegative" parent="Widget.MaterialComponents.Button">

        <item name="colorPrimary">@color/button_action_reject</item>
        <item name="android:textColor">@color/button_action_text_gry</item>
        <item name="android:textSize">12sp</item>
        <item name="icon">@drawable/ic_close</item>
        <item name="iconTint">@color/button_action_text_gry</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">20dp</item>

    </style>

    <style name="ActionMessagePositive" parent="Widget.AppCompat.TextView">
       <item name="android:textSize">12sp</item>
        <item name="android:layout_marginStart">@dimen/margin_from_product_image</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">2</item>
        <item name="android:textColor">@color/button_action_accept</item>

    </style>

    <style name="asd" parent="TextAppearance.AppCompat" >
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/button_action_accept</item>
    </style>

    <style name="custom_spinner_style" parent="Widget.AppCompat.DropDownItem.Spinner">

        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">1dp</item>
        <item name="android:textColor">@color/black_80</item>
        <item name="android:textSize">12sp</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>

</resources>
